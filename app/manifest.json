{
  "name": "Share highlighted text",
  "version": "0.0.1",
  "manifest_version": 2,
  "default_locale": "ja",
  "description": "選択した範囲をScroll To Text Fragmentとして埋め込んだURLを生成します。",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": [
      "libs/polyfill.min.js",
      "scripts.babel/background.js"
    ]
  },
  "permissions": [
    "background",
    "activeTab",
    "contextMenus",
    "clipboardWrite"
  ]
}